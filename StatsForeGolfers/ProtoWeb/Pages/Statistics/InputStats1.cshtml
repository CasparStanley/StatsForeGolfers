@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ProtoWeb.Pages.Statistics.InputStats1Model
@{
    ViewData["Title"] = "InputStats1";
}


<div class="row justify-content-center p-4">
    <div class="col-auto">
        <h1> Hole 1</h1>
        <div class="my-auto container frame">
            <div class="form-group">
                <table class="text-center">
                    <tr>
                        <td colspan="3">Fairway</td>
                    </tr>
                    <tr>
                        <td>Left</td>
                        <td></td>
                        <td>Right</td>
                    </tr>
                    <tr>
                        <td>
                            <form asp-page="/Statistics/InputStats2" method="post" class="text-center">
                                <input type="submit" id="fwMissL" class="btn-miss" value="Miss" asp-for="@Model.MockSheet.FairWayMissLeft" />
                            </form>
                        </td>
                        <td>
                            <form asp-page="/Statistics/InputStats2" method="post" class="text-center">
                                <input type="submit" class="btn-hit" value="Hit" asp-for="@Model.MockSheet.FairWayHit" />
                            </form>
                        </td>
                        <td>
                            <form asp-page="/Statistics/InputStats2" method="post" class="text-center">
                                <input type="submit" class="btn-miss" value="Miss" asp-for="@Model.MockSheet.FairWayMissRight" />
                            </form>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
    $(document).ready(function () {
        $("#fwMissL").click(function () {
            $@Model.MockSheet.Increase(Stroke.FairWayMissLeft);
        });

    });
    </script>
}