@page
@model ProtoWeb.Pages.Statistics.InputStats1Model
@{
    ViewData["Title"] = "InputStats1";
}

<div class="row justify-content-center p-4">
    <div class="col-auto">
        <h1> Hole @Model.CurrentHoleId</h1>
        <div class="img-fluid text-center">
            <img src="../img/hole_icon.png" height="120" />
        </div>
        <div class="my-auto container frame">
            <form method="post">
                <table class="text-center">
                    <tr>
                        <td colspan="3">Fairway</td>
                    </tr>
                    <tr>
                        <td>Left</td>
                        <td></td>
                        <td>Right</td>
                    </tr>
                    <tr>
                        <td class="p-2">
                            <input asp-for="@Model.MyStatSheet.FairWayMissLeft" asp-page-handler="MissFairwayLeft" type="submit" class="btn-danger btn-miss" value="Miss" />
                        </td>
                        <td class="p-2">
                            <input asp-for="@Model.MyStatSheet.FairWayHit" asp-page-handler="HitFairway" type="submit" class="btn-primary btn-hit" value="Hit" />
                        </td>
                        <td class="p-2">
                            <input asp-for="@Model.MyStatSheet.FairWayMissRight" asp-page-handler="MissFairwayRight" type="submit" class="btn-danger btn-miss" value="Miss" />
                        </td>
                    </tr>
                </table>
            </form>
        </div>
        <br />
        <div class="my-auto container frame">
            <p class="text-dark">
                Your Statistics:
            </p>
            <p class="text-dark">
                Fairway misses left: @Model.MyStatSheet.FairWayMissLeft
            </p>
            <p class="text-dark">
                Fairway hits: @Model.MyStatSheet.FairWayHit
            </p>
            <p class="text-dark">
                Fairway misses right: @Model.MyStatSheet.FairWayMissRight
            </p>
            <br />
            <p class="text-dark">
                Green misses left: @Model.MyStatSheet.GreenMissLeft
            </p>
            <p class="text-dark">
                Green hits: @Model.MyStatSheet.GreenHit
            </p>
            <p class="text-dark">
                Green misses right: @Model.MyStatSheet.GreenMissRight
            </p>
            <br />
            <p class="text-dark">
                Scramble outs: @Model.MyStatSheet.ScrambleMiss
            </p>
            <p class="text-dark">
                Scramble ins: @Model.MyStatSheet.ScrambleHit
            </p>
        </div>
    </div>
</div>