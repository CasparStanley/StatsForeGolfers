@page
@model ProtoWeb.Pages.Statistics.InputStats4Model
@{
    ViewData["Title"] = "InputStats4";
}

<div class="row justify-content-center p-4">
    <div class="col-auto">
        <div class="form-check">
            <div class="container-fluid">
                <h4>Hole @Model.CurrentHoleId - Total Score</h4>
            </div>
            <div class="img-fluid text-center">
                <img src="../img/course_icon.png" height="120" />
            </div>
            <form method="post">
                <div class="my-auto container frame">
                    <div style="padding-left: 1.25rem">
                        @*<h4 class="text-dark">Total Score</h4>*@
                        <input asp-for="@Model.TotalScoreValue" type="number" name="TotalScoreValue" class="form-check-input textField" value="Your Total Score" />
                        <label asp-for="@Model.TotalScoreValue" class="control-label">
                            Your Total Score
                        </label>
                        <span asp-validation-for="@Model.TotalScoreValue" class="text-danger"></span>

                        <div class="form-group pt-4">
                            <input type="submit" value="Create" class="btn btn-primary" asp-page-handler="TotalScore" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <br />
        <div class="my-auto container frame">
            <p class="text-dark">
                Your Statistics:
            </p>
            <p class="text-dark">
                Fairway misses left: @Model.MyStatSheet.FairWayMissLeft
            </p>
            <p class="text-dark">
                Fairway hits: @Model.MyStatSheet.FairWayHit
            </p>
            <p class="text-dark">
                Fairway misses right: @Model.MyStatSheet.FairWayMissRight
            </p>
            <br />
            <p class="text-dark">
                Green misses left: @Model.MyStatSheet.GreenMissLeft
            </p>
            <p class="text-dark">
                Green hits: @Model.MyStatSheet.GreenHit
            </p>
            <p class="text-dark">
                Green misses right: @Model.MyStatSheet.GreenMissRight
            </p>
            <br />
            <p class="text-dark">
                Scramble outs: @Model.MyStatSheet.ScrambleMiss
            </p>
            <p class="text-dark">
                Scramble ins: @Model.MyStatSheet.ScrambleHit
            </p>
        </div>
    </div>
</div>