@page
@model ProtoWeb.Pages.Statistics.InputStats3Model
@{
    ViewData["Title"] = "InputStats3";
}

<div class="row justify-content-center p-4">
    <div class="col-auto">
        <h1> Hole @Model.CurrentHoleId</h1>
        <div class="img-fluid text-center">
            <img src="../img/hole_icon.png" height="120" />
        </div>
        <div class="my-auto container frame">
            <form method="post">
                <table class="text-center">
                    <tr>
                        <td colspan="3">Scramble</td>
                    </tr>
                    <tr>
                        <td>Out</td>
                        <td>In</td>
                    </tr>
                    <tr>
                        <td class="p-2">
                            <input asp-page-handler="ScrambleOut" type="submit" class="btn-danger btn-miss" value="Out" />
                        </td>
                        <td class="p-2">
                            <input asp-page-handler="ScrambleIn" type="submit" class="btn-primary btn-hit" value="In" />
                        </td>
                    </tr>
                </table>
            </form>
        </div>
        <br />
        <div class="my-auto container frame">
            <p class="text-dark">
                Your Statistics:
            </p>
            <p class="text-dark">
                Fairway misses left: @Model.MyStatSheet.FairWayMissLeft
            </p>
            <p class="text-dark">
                Fairway hits: @Model.MyStatSheet.FairWayHit
            </p>
            <p class="text-dark">
                Fairway misses right: @Model.MyStatSheet.FairWayMissRight
            </p>
            <br />
            <p class="text-dark">
                Green misses left: @Model.MyStatSheet.GreenMissLeft
            </p>
            <p class="text-dark">
                Green hits: @Model.MyStatSheet.GreenHit
            </p>
            <p class="text-dark">
                Green misses right: @Model.MyStatSheet.GreenMissRight
            </p>
            <br />
            <p class="text-dark">
                Scramble outs: @Model.MyStatSheet.ScrambleMiss
            </p>
            <p class="text-dark">
                Scramble ins: @Model.MyStatSheet.ScrambleHit
            </p>
        </div>
    </div>
</div>