@page
@using ProtoWeb.Models
@model ProtoWeb.Pages.ProStats.ProStatisticsModel
@{
    ViewData["Title"] = "ProStatistics";
}

<div class="row justify-content-center p-4">
    <div class="col-auto">
        <h1>Pro Stats</h1>
        <p>
            <a asp-page="CreateProStats">Create ProStats</a>
        </p>
        <table class="table table-bordered">
            <thead>
                <tr class="text-center">
                    <th>
                        Tour
                    </th>
                    <th>
                        Scoring Average
                    </th>
                    <th>
                        DrivingDistance
                    </th>
                    <th>
                        Fairway Average
                    </th>
                    <th>
                        Green In Reg Average
                    </th>
                    <th>
                        Scrambling Average
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ProStatses)
                {
                    <tr class="text-center">
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.ScoringAverage
                        </td>
                        <td>
                            @item.DrivingDistance
                        </td>
                        <td>
                            @item.FairwayAverage
                        </td>
                        <td>
                            @item.GreenInRegAverage
                        </td>
                        <td>
                            @item.ScramblingAverage
                        </td>
                            <td>
                                <a class="link-dark" asp-page="EditProStats" asp-route-id="@item.Id">Update Stats</a>
                            </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>