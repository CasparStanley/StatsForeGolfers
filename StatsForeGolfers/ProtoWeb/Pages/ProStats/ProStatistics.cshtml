@page
@model ProtoWeb.Pages.ProStats.ProStatisticsModel
@{
    ViewData["Title"] = "ProStatistics";
}

<h1>Pro Stats</h1>
<table class="table">
    <thead>
    <tr>
        <th>
            Tour
        </th>
        <th>
            Scoring Average
        </th>
        <th>
            DrivingDistance
        </th>
        <th>
            Fairway Average
        </th>
        <th>
            Green In Reg Average
        </th>
        <th>
            Scrambling Average
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.ProStatses)
    {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.ScoringAverage
            </td>
            <td>
                @item.DrivingDistance
            </td>
            <td>
                @item.FairwayAverage
            </td>
            <td>
                @item.GreenInRegAverage
            </td>
            <td>
                @item.ScramblingAverage
            </td>
        </tr>
    }
    </tbody>
</table>



