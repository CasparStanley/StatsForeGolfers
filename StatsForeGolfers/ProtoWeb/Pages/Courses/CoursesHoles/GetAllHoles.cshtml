@page "{id}"
@model ProtoWeb.Pages.Courses.CoursesHoles.GetAllHolesModel
@{
    ViewData["Title"] = "GetAllHoles";
}
<p>
    <a asp-page="CreateHoles" asp-route-id="@Model.courseId">Create Hole</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                HoleNo
            </th>
            <th>
                Par
            </th>
            <th>
                Length
            </th>
            <th>
                Handicap
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Holes)
        {
            <tr>
                <td>
                    @item.Value.HoleNo
                </td>
                <td>
                    @item.Value.Par
                </td>
                <td>
                    @item.Value.Length
                </td>
                <td>
                    @item.Value.Handicap
                </td>
                <td>
                    <p>
                        <a asp-page="EditHole" asp-route-holeNo="@item.Key">Edit</a> |
                        <a asp-page="DeleteHole" asp-route-HoleNo="@item.Key" asp-route-id="@Model.courseId">Delete</a>
                    </p>
                </td>

            </tr>
        }
    </tbody>
</table>
