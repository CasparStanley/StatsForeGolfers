@page "{id}"
@model ProtoWeb.Pages.Courses.CoursesHoles.CreateHolesModel
@{
    ViewData["Title"] = "CreateHoles";
}

<div class="row justify-content-center p-4">
    <div class="col-auto">
        <h1>Create Hole</h1>
        <div class="img-fluid text-center">
            <img src="../../../img/hole_icon.png" height="120" />
        </div>
        <div class="my-auto container frame">
            <form method="post">
                <div class="form-group">
                    <label asp-for="@Model.Hole.HoleNo" class="control-label"> HoleNo </label>
                    <input asp-for="@Model.Hole.HoleNo" class="form-control" />
                    <span asp-validation-for="@Model.Hole.HoleNo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Hole.Par" class="control-label">Par </label>
                    <input asp-for="@Model.Hole.Par" class="form-control" />
                    <span asp-validation-for="@Model.Hole.Par" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="@Model.Hole.Length" class="control-label">Length</label>
                    <input asp-for="@Model.Hole.Length" class="form-control" />
                    <span asp-validation-for="@Model.Hole.Length" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Hole.Handicap" class="control-label">Handicap</label>
                    <input asp-for="@Model.Hole.Handicap" class="form-control" />
                    <span asp-validation-for="@Model.Hole.Handicap" class="text-danger"></span>
                </div>
                <dl class="row">
                    <dt class="col-sm-2 pr-lg-5">
                        <a class="btn btn-danger" asp-page="GetAllHoles" asp-route-id="@Model.CurrentCourseId">Cancel</a>
                    </dt>
                    <dt class="form-group col-sm-2 pl-lg-5">
                        <input type="submit" id="Submit" value="Create" class="btn btn-primary" />
                    </dt>
                </dl>
            </form>
        </div>
    </div>
</div>