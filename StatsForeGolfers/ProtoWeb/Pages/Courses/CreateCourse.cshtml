@page
@model ProtoWeb.Pages.Courses.CreateCourseModel
@{
    ViewData["Title"] = "CreateCourse";
}
<h1>Create Course</h1>


<form method="post">

    <div class="form-group">
        <label asp-for="@Model.CurrentCourse.Id" class="control-label"> Id </label>
        <input asp-for="@Model.CurrentCourse.Id" class="form-control" />
        <span asp-validation-for="@Model.CurrentCourse.Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.CurrentCourse.Name" class="control-label">Name </label>
        <input asp-for="@Model.CurrentCourse.Name" class="form-control" />
        <span asp-validation-for="@Model.CurrentCourse.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>