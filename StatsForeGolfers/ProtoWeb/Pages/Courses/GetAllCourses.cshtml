@page
@model ProtoWeb.Pages.Courses.GetAllCoursesModel
@{
    ViewData["Title"] = "GetAllCourses";
}
<h1>All Courses</h1>

<p>
    <a asp-page="CreateCourse">Create New Course</a>
</p>
<form>
    <p>
        Search: <input type="text" asp-for="FilterCriteria" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Courses)
        {
            <tr>
                <td>
                    <a asp-area="" asp-page="">Id:@item.Value.Id @item.Value.Name</a> <!--"..@item.Value.Id"-->
                </td>
                <td>
                    <p>
                        <a asp-page="EditCourse" asp-route-id="@item.Key">Edit</a> |
                        <a asp-page="DeleteCourse" asp-route-id="@item.Key">Delete</a>
                    </p>
                </td>
            </tr>
        }
    </tbody>
</table>

