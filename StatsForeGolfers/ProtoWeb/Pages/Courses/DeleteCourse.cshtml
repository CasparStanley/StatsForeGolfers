@page "{id}"
@model ProtoWeb.Pages.Courses.DeleteCourseModel
@{
}

<div class="row justify-content-center p-4">
    <div class="col-auto">
        <h1>Delete Course</h1>
        <div class="img-fluid text-center">
            <img src="../../img/course_icon.png" height="120" />
        </div>
        <div class="my-auto container frame">
            <h3 class="text-dark">Are you sure you want to delete this Course?</h3>
            <div>
                <form method="post">
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.CurrentCourses.Id)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.CurrentCourses.Id)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.CurrentCourses.Name)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.CurrentCourses.Name)
                        </dd>

                    </dl>
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
                <div class="pt-4">
                    <a class="btn btn-primary" asp-page="GetAllCourses">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>