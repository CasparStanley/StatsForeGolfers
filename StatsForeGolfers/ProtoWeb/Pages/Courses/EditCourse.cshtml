@page "{id}"
@model ProtoWeb.Pages.Courses.EditCourseModel
@{
    ViewData["Title"] = "EditCourse";
}

<div class="row justify-content-center p-4">
    <div class="col-auto">
        <h1>EditCourse</h1>
        <div class="img-fluid text-center">
            <img src="../img/course_icon.png" height="120" />
        </div>
        <div class="my-auto container frame">
            <form method="post">
                <div class="form-group">
                    <label asp-for="@Model.CurrentCourse.Id" class="control-label"></label>
                    <input asp-for="@Model.CurrentCourse.Id" class="form-control" />
                    <span asp-validation-for="@Model.CurrentCourse.Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.CurrentCourse.Name" class="control-label"></label>
                    <input asp-for="@Model.CurrentCourse.Name" class="form-control" />
                    <span asp-validation-for="@Model.CurrentCourse.Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>