@page
@model ProtoWeb.Users.UserModel
@{
    ViewData["Title"] = "User";
}

<!DOCTYPE HTML>
<html lang="en">
<head>
    
</head>
<body>
    <div class="row justify-content-center p-4">
        <div class="col-auto">
            <div class="form-check">
                <div class="container-fluid">
                    <h4>What is Your Status?</h4>
                </div>
                <div class="container-fluid jumbotron">
                    <input asp-for="@Model.CurrentUser.Status" type="radio" name="statusAnswer" class="form-check-input" value="Amateur" />
                    <label asp-for="@Model.CurrentUser.Status" class="control-label">
                    Amateur
                    </label>
                    <span asp-validation-for="@Model.CurrentUser.Status" class="text-danger"></span>

                    <br />

                    <input asp-for="@Model.CurrentUser.Status" type="radio" name="statusAnswer" class="form-check-input" value="Intermediate" />
                    <label asp-for="@Model.CurrentUser.Status" class="control-label">
                    Intermediate
                    </label>
                    <span asp-validation-for="@Model.CurrentUser.Status" class="text-danger"></span>

                    <br />

                    <input asp-for="@Model.CurrentUser.Status" type="radio" name="statusAnswer" class="form-check-input" value="Pro" />
                    <label asp-for="@Model.CurrentUser.Status" class="control-label">
                    Pro
                    </label>
                    <span asp-validation-for="@Model.CurrentUser.Status" class="text-danger"></span>

                </div>
                </div>
                <br />
                <form name="formUser" action="/noaction" method="post">
                    <div class="container-fluid">
                        <h4>User Info:</h4>
                    </div>
                    <div class="container-fluid jumbotron">
                        <label for="fName">Name:</label><br />
                        <input type="text" id="Name" name="fName" value=" " /><br/>

                        <label for="HomeClub">Home Club:</label><br />
                        <input type="text" id="HomeClub" name="Home Club" value=" " /><br/>

                        <label for="MemberId">Member Id:</label><br />
                        <input type="text" id="MemberId" name="Member Id" value=" " /><br/>

                        <label for="Handicap">HCP:</label><br />
                        <input type="text" id="Handicap" name="HCP" value=" " /><br/>
                        <input type="submit" value="Submit">
                    </div>
                </form>
            </div>
    </div>
</body>
</html>
