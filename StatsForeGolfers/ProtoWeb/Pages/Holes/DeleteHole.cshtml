@page "{holeNo}"
@model ProtoWeb.Pages.Holes.DeleteHoleModel
@{
    ViewData["Title"] = "DeleteHole";
}

<h1>Delete Hole</h1>
<h3>Are you sure you want to delete this hole?</h3>
<div>
    <form method="post">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Hole.HoleNo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Hole.HoleNo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Hole.Par)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Hole.Par)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Hole.Length)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Hole.Length)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Hole.Handicap)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Hole.Handicap)
            </dd>
        </dl>
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
    <div>
        <a asp-page="GetAllHoles">Back to List</a>
    </div>
</div>